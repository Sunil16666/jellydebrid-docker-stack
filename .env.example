# JellyDebrid Docker Stack Environment Variables
# This file contains all environment variables used across the Docker stack

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Timezone (used by all services)
TZ=YOUR_TIMEZONE

# User and Group IDs for LinuxServer.io containers (matched with deploy user)
PUID=MATCH_YOUR_USER_ID
PGID=MATCH_YOUR_GROUP_ID

# =============================================================================
# TRAEFIK & SSL CONFIGURATION
# =============================================================================

# Email address for Let's Encrypt ACME certificates
ACME_EMAIL=YOUR_EMAIL

# Cloudflare DNS API Token for DNS challenge (for wildcard certificates)
CF_DNS_API_TOKEN=YOUR_CLOUDFLARE_DNS_API_TOKEN

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Domain names for services (used by Traefik for routing)
JELLYFIN_DOMAIN=YOUR_JELLYFIN_DOMAIN
JELLYSEERR_DOMAIN=YOUR_JELLYSEERR_DOMAIN

# =============================================================================
# VPN CONFIGURATION (Gluetun + ProtonVPN)
# =============================================================================

# Wireguard configuration for ProtonVPN
WIREGUARD_PRIVATE_KEY=YOUR_WIREGUARD_PRIVATE_KEY
WIREGUARD_ADDRESSES=YOUR_WIREGUARD_ADDRESSES
WIREGUARD_COUNTRIES=YOUR_WIREGUARD_COUNTRIES

# =============================================================================
# RDTCLIENT CONFIGURATION
# =============================================================================

# RDTClient credentials and connection details
RDTCLIENT_USERNAME=YOUR_RDTCLIENT_USERNAME
RDTCLIENT_PASSWORD='YOUR_RDTCLIENT_PASSWORD'
RDTCLIENT_HOST=YOUR_RDTCLIENT_HOST

# =============================================================================
# RADARR API KEYS
# =============================================================================

# API keys for each Radarr instance
# Generate these in each Radarr instance: Settings > General > Security > API Key
RADARR_EN_1080P_API_KEY=YOUR_RADARR_EN_1080P_API_KEY
RADARR_DE_1080P_API_KEY=YOUR_RADARR_DE_1080P_API_KEY
RADARR_EN_2160P_API_KEY=YOUR_RADARR_EN_2160P_API_KEY
RADARR_DE_2160P_API_KEY=YOUR_RADARR_DE_2160P_API_KEY

# =============================================================================
# SONARR API KEYS
# =============================================================================

# API keys for each Sonarr instance
# Generate these in each Sonarr instance: Settings > General > Security > API Key
SONARR_EN_1080P_API_KEY=YOUR_SONARR_EN_1080P_API_KEY
SONARR_DE_1080P_API_KEY=YOUR_SONARR_DE_1080P_API_KEY
SONARR_EN_2160P_API_KEY=YOUR_SONARR_EN_2160P_API_KEY
SONARR_DE_2160P_API_KEY=YOUR_SONARR_DE_2160P_API_KEY

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Prometheus Configuration
PROMETHEUS_RETENTION=15d
