{
  "dashboard": {
    "id": null,
    "title": "JellyDebrid Stack Overview",
    "tags": ["jellydebrid", "docker", "traefik"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 0,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"traefik|prometheus|node-exporter|cadvisor\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {
            "fields": "",
            "calcs": ["lastNotNull"],
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(traefik_service_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 0},
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "System Load",
        "type": "graph",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1m load"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5m load"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15m load"
          }
        ],
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 0},
        "yAxes": [
          {"label": "Load", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Used %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {"label": "Percent", "min": 0, "max": 100},
          {"show": false}
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Used %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {"label": "Percent", "min": 0, "max": 100},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Container Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) by (name) * 100",
            "legendFormat": "{{name}} CPU %"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "yAxes": [
          {"label": "CPU %", "min": 0},
          {"show": false}
        ]
      }
    ]
  }
}
