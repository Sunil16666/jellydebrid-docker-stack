{
  "dashboard": {
    "id": null,
    "title": "JellyDebrid Docker Containers",
    "tags": ["docker", "containers"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "container",
          "type": "query",
          "datasource": "prometheus",
          "query": "label_values(container_last_seen, name)",
          "regex": "/^(?!POD)(.+)$/",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "title": "Running Containers",
        "type": "stat",
        "targets": [
          {
            "expr": "count(count by (name)(container_last_seen{name=~\"$container\"}))",
            "datasource": "prometheus"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "title": "Total CPU Usage by Container",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"$container\"}[5m]) * 100",
            "datasource": "prometheus",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "title": "Memory Usage by Container",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"$container\"} / 1024 / 1024",
            "datasource": "prometheus",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\"$container\"}[5m])",
            "datasource": "prometheus",
            "legendFormat": "{{name}} - RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\"$container\"}[5m])",
            "datasource": "prometheus",
            "legendFormat": "{{name}} - TX"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "title": "Disk I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{name=~\"$container\"}[5m])",
            "datasource": "prometheus",
            "legendFormat": "{{name}} - Read"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total{name=~\"$container\"}[5m])",
            "datasource": "prometheus",
            "legendFormat": "{{name}} - Write"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ]
  }
}
